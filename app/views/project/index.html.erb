<div>
    <h1>Project Conversation History</h1>
    <%= form_with url: '/status_logs', method: :post do |f| %>
        <%= f.label :status, "Status:" %>
        <%= f.select :status, options_for_select(@statuses, [@last_status]), {}, onchange: "this.form.submit()" %>
    <% end %>

    <ul>
        <%= @all.map { |el| content_tag(:li, el[:status] ? "Status: #{el[:status]}" : "Comment: #{el[:comment]}" ) }.join.html_safe %>
    </ul>

    <%= form_with url: '/comments', method: :post do |f| %>
        <%= f.label :comment, "Comment:" %>
        <%= f.text_field :comment %>

        <%= f.submit :submit %>
    <% end %>
</div>